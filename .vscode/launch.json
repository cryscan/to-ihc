    "version": "0.2.0",
    "configurations": [
        {
            "name": "clang++ - Build and debug monoped",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/monoped",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/lldb-mi-8"
        },
        {
            "name": "clang++ - Build and debug control",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/control",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/lldb-mi-8"
        }
    ]
}